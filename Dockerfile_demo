#  ğŸ³ Chorely backend â€“ demoâ€‘day Dockerfile
#     â€¢ builds TypeScript once, runs compiled JS (fast startup)
#     â€¢ runtime image only prod deps + compiled artefacts
#     â€¢ waits for Postgres â†’ migrate â†’ seed (if empty) â†’ start
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

######################## 1ï¸âƒ£  builder stage ########################
FROM node:18-alpine AS builder
WORKDIR /app

# install all deps for build (dev+prod)
COPY package*.json ./
RUN npm ci --ignore-scripts --prefer-offline

# copy source & build
COPY . ./
RUN npm run build     # emits dist/

# pg_isready for wait loop
RUN apk add --no-cache postgresql-client

EXPOSE 4000
ENV NODE_ENV=production
