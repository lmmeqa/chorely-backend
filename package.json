{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:staging": "drizzle-kit migrate --config drizzle.config.staging.ts",
    "db:migrate:production": "drizzle-kit migrate --config drizzle.config.production.ts",
    "db:seed": "tsx scripts/seed.ts",
    "db:seed:staging": "tsx scripts/seed.ts staging",
    "db:seed:production": "tsx scripts/seed.ts production",
    "db:studio": "drizzle-kit studio",
    "db:studio:staging": "drizzle-kit studio --config drizzle.config.staging.ts",
    "db:studio:production": "drizzle-kit studio --config drizzle.config.production.ts",
    "db:push": "drizzle-kit push",
    "db:push:staging": "drizzle-kit push --config drizzle.config.staging.ts",
    "db:push:production": "drizzle-kit push --config drizzle.config.production.ts",
    "fetch-seed-images": "ts-node scripts/fetch_seed_images.ts",
    "predev": "npm run db:migrate && npm run db:seed",
    "dev": "tsx watch src/server.ts",
    "dev:no-seed": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "test": "vitest run --config vitest.config.mts --reporter=verbose",
    "test:ui": "vitest --config vitest.config.mts --ui",
    "test:coverage": "vitest run --config vitest.config.mts --coverage",
    "dev:worker": "wrangler dev --ip 0.0.0.0",
    "dev:worker:staging": "wrangler dev --env staging --ip 0.0.0.0",
    "dev:worker:network": "node simple-dev-server.js",
    "dev:worker:staging:network": "node simple-dev-server.js",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:production": "wrangler deploy"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.0",
    "@neondatabase/serverless": "^0.10.4",
    "@supabase/supabase-js": "^2.55.0",
    "@types/busboy": "^1.5.4",
    "busboy": "^1.6.0",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.4",
    "hono": "^4.6.6",
    "jose": "^6.0.12",
    "openai": "^5.13.1",
    "pg": "^8.16.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^4.0.0-beta.8",
    "drizzle-kit": "^0.31.4",
    "jsonwebtoken": "^9.0.2",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vitest": "^4.0.0-beta.8",
    "wrangler": "^4.31.0",
    "zod": "^3.25.76"
  }
}
