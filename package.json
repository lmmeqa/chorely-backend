{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "knex": "ts-node -r tsconfig-paths/register ./node_modules/knex/bin/cli.js",
    "migrate": "npm run knex -- migrate:latest --knexfile src/db/knexfile.ts",
    "seed": "npm run knex -- seed:run --knexfile src/db/knexfile.ts",
    "fetch-seed-images": "ts-node scripts/fetch_seed_images.ts",
    "dev": "ts-node --max-old-space-size=4096 src/index.ts",
    "build": "tsc && cp -r static dist/",
    "start": "node dist/index.js",
    "test": "vitest run --config vitest.config.mts --reporter=verbose",
    "test:ui": "vitest --config vitest.config.mts --ui",
    "test:coverage": "vitest run --config vitest.config.mts --coverage",
    "dev:worker": "wrangler dev",
    "deploy:worker": "wrangler deploy"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.10.4",
    "hono": "^4.6.6",
    "@supabase/supabase-js": "^2.55.0",
    "jose": "^6.0.12",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-async-handler": "^1.2.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "multer": "^2.0.2",
    "openai": "^5.13.1",
    "pg": "^8.16.3",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "wrangler": "^4.31.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^4.0.0-beta.8",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2",
    "vitest": "^4.0.0-beta.8",
    "zod": "^3.23.8"
  }
}
